BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_label
            text: '34.0'
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'up'
                on_press: app.handle_increment_or_decrement(1)
            Button:
                text: 'down'
                on_press: app.handle_increment_or_decrement(-1)

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion()
    Label:
        id: output_label
        text: "54.717"
        font_sizeL: 48
        color: (1, 1, 0, 1)